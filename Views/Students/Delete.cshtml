@model StudentRecordsApp.Models.Student

<h2>Delete Student</h2>
<p>Are you sure you want to delete this record?</p>

<div class="card p-3">
    <p><strong>Full Name:</strong> @Model.FullName</p>
    <p><strong>Department:</strong> @Model.Department</p>
    <p><strong>Age:</strong> @Model.Age</p>
    <p><strong>Email:</strong> @Model.Email</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Yes, Delete</button>
    <a href="/Students" class="btn btn-secondary mt-3">Cancel</a>
</form>