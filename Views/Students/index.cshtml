@model IEnumerable<StudentRecordsApp.Models.Student>
@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-4">
    <h2 class="mb-3">Students List</h2>
    <a class="btn btn-primary mb-3" href="/Students/Create">Add New Student</a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Department</th>
                <th>Age</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.FullName</td>
                <td>@s.Department</td>
                <td>@s.Age</td>
                <td>@s.Email</td>
                <td>
                    <a class="btn btn-sm btn-warning" href="/Students/Edit/@s.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" href="/Students/Delete/@s.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
